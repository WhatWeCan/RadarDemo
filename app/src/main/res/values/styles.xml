<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="RadarView">
        <attr name="baseLineNums" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="mBaseLineColor" format="color|reference" />
        <attr name="mCoverColor" format="reference|color" />
        <attr name="mTxtColor" format="color|reference" />
        <attr name="mTxtSize" format="dimension|reference" />
        <attr name="mCoverPointColor" format="color|reference" />
        <attr name="mCoverAlpha" format="integer" />
    </declare-styleable>

</resources>
